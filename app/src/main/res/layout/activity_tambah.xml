<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    tools:context="com.zucc.todolist.admin.TambahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            style="@style/editText_style"
            android:id="@+id/food_name"
            android:hint="Nama Makanan/Minuman"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/pict_name"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:text="Foto"
                style="@style/editText_style"/>
            <Button
                android:id="@+id/load_pict"
                android:layout_width="100dp"
                android:layout_height="50dp"
                style="@style/submit_style"
                android:text="Load Image"/>
        </LinearLayout>
        <TextView
            android:id="@+id/load_date"
            style="@style/editText_style"
            android:hint="Kadaluarsa"/>
        <EditText
            style="@style/editText_style"
            android:id="@+id/buy_price"
            android:hint="Harga Beli"
            android:inputType="number"/>
        <EditText
            style="@style/editText_style"
            android:id="@+id/sell_price"
            android:hint="Harga Jual"
            android:inputType="number"/>
        <EditText
            style="@style/editText_style"
            android:id="@+id/set_stock"
            android:hint="Stock"
            android:inputType="number"/>
        <Spinner
            android:id="@+id/set_category"
            android:layout_width="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"></Spinner>


        <Button
            android:id="@+id/submit_food"
            style="@style/submit_style"
            android:text="Kirim Data"/>
        
    </LinearLayout>

</RelativeLayout>
